{
  "name": "backend-catalog",
  "description": "API REST para cat√°logo de productos",
  "env": {
    "NODE_ENV": {
      "description": "Environment for the application",
      "value": "production"
    },
    "JWT_SECRET": {
      "description": "A secret key for JWT",
      "generator": "secret"
    },
    "MONGO_URI": {
      "description": "MongoDB connection string",
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "addons": [
    {
      "plan": "mongodb"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
} 